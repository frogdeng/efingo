<script>
	$(function(){
		$('.js-open-notice-01').magnificPopup({
			items: {
					src: '#js-open-notice-01',
					type: 'inline'
			},
			mainClass: 'mfp-fade',
			removalDelay: 300,
			midClick: true
		});
		

		$(".img_b01").addClass('go_big')
        $(".img_b02").addClass('main_show_b02')
		$(".img_b03").addClass('main_show_b03')

		// scroll Animation	
		$(window).scroll(function (event) {
			var scrollTop = $(window).scrollTop() ;
			if(scrollTop > $(".m_mobile_01").offset().top -500){
				$(".circle_01").addClass('go_big')
				$(".m_mobile_01").addClass('go_big')
				$(".text-show_01").addClass('show_text')
				
			}else{
				$(".circle_01").removeClass('go_big')
				$(".m_mobile_01").removeClass('go_big')
				$(".text-show_01").removeClass('show_text')
			}
	
			if(scrollTop > $(".m_mobile_02").offset().top -500){
				$(".circle_02").addClass('go_big')
				$(".m_mobile_02").addClass('go_big')
				$(".text-show_02").addClass('show_text')
			}else{
				$(".circle_02").removeClass('go_big')
				$(".m_mobile_02").removeClass('go_big')
				$(".text-show_02").removeClass('show_text')
			}
			
		});
	});
</script>
