<script>
	$(document).ready(function(){

		$(".qa_title").click(function(){
      $(this).toggleClass('icon_animation');
      $(this).parent().find(".qa_answer").toggleClass("show_answer")
      $(this).parent().toggleClass('thick');
      $(this).parent().siblings().find(".qa_answer").removeClass("show_answer")
      $(this).parent().siblings().removeClass("thick")
		})

	});


</script>

