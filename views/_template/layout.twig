<script>
    $('.footer_menu_title').click(function(){
        $(this).toggleClass('s_switch_on')
        $(this).siblings().toggleClass('pillar_show')
        $(this).parents().siblings().find(".footer_menu_title").removeClass('s_switch_on')
        $(this).parents().siblings().find(".pillar_content").removeClass('pillar_show')
	
    })

 

    if($(window).scrollTop() > 100){
        $(".index_menu").addClass('index_menu_bg')
    }else{
        $(".index_menu").removeClass('index_menu_bg')
    }

    // scroll Animation	
    $(window).scroll(function (event) {
        var scrollTop = $(window).scrollTop()

        if(scrollTop > 400){
            $(".go_top").addClass('go_top_show')
        }else{
			$(".go_top").removeClass('go_top_show')
        }

        if(scrollTop > 20){
            $(".index_menu").addClass('index_menu_bg')
        }else{
            $(".index_menu").removeClass('index_menu_bg')
        }

        if($(window).scrollTop() > $(".footer_topwave").offset().top -500){
            $(".scroll").addClass('gone')
        }else{
            $(".scroll").removeClass('gone')
        }

    });

    $('.go_top').click(function(){
		// 讓捲軸移動到 0 的位置
		var $body = (window.opera) ? (document.compatMode == "CSS1Compat" ? $('html') : $('body')) : $('html,body');
		$body.animate({
			scrollTop: 0
		}, 600);

        return false;
    })
</script>
